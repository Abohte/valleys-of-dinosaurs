<ul>
    <% @dinosaur.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

<%= form_for @dinosaur do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :valley_id %>
  <%= f.collection_select(:valley_id, @valleys, :id, :name) %>

  <%= f.submit (@dinosaur.new_record? ? "Create" : "Update")%>

<% end %>
